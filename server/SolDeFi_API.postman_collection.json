{
  "info": {
    "name": "SolDeFi API",
    "description": "Complete API collection for SolDeFi landing page and app endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "soldefi-api"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Landing Page",
      "item": [
        {
          "name": "Get Landing Info - English",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/landing/info?lang=en",
              "host": ["{{base_url}}"],
              "path": ["api", "landing", "info"],
              "query": [{"key": "lang", "value": "en"}]
            }
          }
        },
        {
          "name": "Get Landing Info - Spanish",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/landing/info?lang=es",
              "host": ["{{base_url}}"],
              "path": ["api", "landing", "info"],
              "query": [{"key": "lang", "value": "es"}]
            }
          }
        },
        {
          "name": "Get Landing Info - Portuguese",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/landing/info?lang=pt",
              "host": ["{{base_url}}"],
              "path": ["api", "landing", "info"],
              "query": [{"key": "lang", "value": "pt"}]
            }
          }
        },
        {
          "name": "Get Available Languages",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/landing/languages",
              "host": ["{{base_url}}"],
              "path": ["api", "landing", "languages"]
            }
          }
        },
        {
          "name": "Redirect to App",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/landing/redirect",
              "host": ["{{base_url}}"],
              "path": ["api", "landing", "redirect"]
            }
          }
        }
      ]
    },
    {
      "name": "SolDeFi App",
      "item": [
        {
          "name": "Get LBP Price",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/app/price?lang=en",
              "host": ["{{base_url}}"],
              "path": ["api", "app", "price"],
              "query": [{"key": "lang", "value": "en"}]
            }
          }
        },
        {
          "name": "Buy SDF Tokens",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bnb_amount\": 1.0,\n  \"tx_hash\": \"0x123456789abcdef\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/app/buy",
              "host": ["{{base_url}}"],
              "path": ["api", "app", "buy"]
            }
          }
        },
        {
          "name": "Get User Dashboard",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/app/dashboard",
              "host": ["{{base_url}}"],
              "path": ["api", "app", "dashboard"]
            }
          }
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"auth_token\", jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"SecurePass123!\",\n  \"language\": \"en\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"auth_token\", jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/health",
          "host": ["{{base_url}}"],
          "path": ["api", "health"]
        }
      }
    }
  ]
}
